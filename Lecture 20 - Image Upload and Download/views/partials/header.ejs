<header
  class="bg-gradient-to-r from-red-500 to-pink-500 text-white p-4 shadow-lg sticky top-0 z-10"
>
  <nav class="container mx-auto flex justify-between items-center">
    <ul class="flex space-x-4">
      <li>
        <a
          href="/"
          class="<%= currentPage === 'index' ? 'text-red-500 bg-white' : 'hover:text-red-500' %> hover:bg-white py-2 px-4 rounded transition duration-300 font-semibold flex items-center"
        >
          <!-- Home Icon -->
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path d="M3 12l9-9 9 9" />
            <path d="M9 21V9h6v12" />
          </svg>
          airbnb
        </a>
      </li>
      <% if(isLoggedIn) { %>
        <% if(user && user.userType === 'guest') { %>
          <li>
            <a
              href="/homes"
              class="<%= currentPage === 'home' ? 'text-red-500 bg-white' : 'hover:text-red-500' %> hover:bg-white py-2 px-4 rounded transition duration-300 font-semibold flex items-center"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path d="M4 6h16M4 12h16M4 18h16" />
              </svg>
              Homes-List
            </a>
          </li>
          <li>
            <a
              href="/bookings"
              class="<%= currentPage === 'bookings' ? 'text-red-500 bg-white' : 'hover:text-red-500' %> hover:bg-white py-2 px-4 rounded transition duration-300 font-semibold flex items-center"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <rect width="18" height="18" x="3" y="4" rx="2" />
                <path d="M16 2v4M8 2v4M3 10h18" />
              </svg>
              Bookings
            </a>
          </li>
          <li>
            <a
              href="/favourites"
              class="<%= currentPage === 'favourites' ? 'text-red-500 bg-white' : 'hover:text-red-500' %> hover:bg-white py-2 px-4 rounded transition duration-300 font-semibold flex items-center"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  d="M12 21C12 21 4 13.364 4 8.636 4 6.052 6.052 4 8.636 4c1.706 0 3.314 1 4.364 2.52C14.05 5 15.658 4 17.364 4 19.948 4 22 6.052 22 8.636c0 4.728-8 12.364-8 12.364z"
                />
              </svg>
              Favourites
            </a>
          </li>
        <% } else { %>
          <li>
            <a
              href="/host/add-home"
              class="<%= currentPage === 'addHome' ? 'text-red-500 bg-white' : 'hover:text-red-500' %> hover:bg-white py-2 px-4 rounded transition duration-300 font-semibold flex items-center"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <circle cx="12" cy="12" r="10" />
                <path d="M12 8v8M8 12h8" />
              </svg>
              Add Home
            </a>
          </li>
          <li>
            <a
              href="/host/host-home-list"
              class="<%= currentPage === 'host-homes' ? 'text-red-500 bg-white' : 'hover:text-red-500' %> hover:bg-white py-2 px-4 rounded transition duration-300 font-semibold flex items-center"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  d="M3 12l9-9 9 9M4 10v10a1 1 0 001 1h3a1 1 0 001-1v-6h4v6a1 1 0 001 1h3a1 1 0 001-1V10"
                />
              </svg>
              Host Homes
            </a>
          </li>
        <% } %>
      <% } %>
    </ul>
    <!-- Authentication Buttons -->
    <% if(!isLoggedIn) { %>
    <div class="ml-4 flex-shrink-0 flex gap-4">
      <a
        href="/login"
        class="flex items-center justify-center w-28 px-4 py-2 rounded-full bg-white text-red-500 font-semibold shadow-md ring-1 ring-red-200 transition-all duration-200 ease-in-out hover:bg-gradient-to-r hover:from-red-500 hover:to-pink-500 hover:text-white hover:shadow-lg focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-red-400 animate-fade-in-right"
      >
        <!-- Login Icon -->
        <svg
          class="w-5 h-5 mr-2 -ml-1"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path d="M15 12H3M9 6l-6 6 6 6" />
          <circle cx="19" cy="12" r="2" />
        </svg>
        <span class="whitespace-nowrap">Login</span>
      </a>
      <a
        href="/signup"
        class="flex items-center justify-center w-28 px-4 py-2 rounded-full bg-white text-red-500 font-semibold shadow-md ring-1 ring-red-200 transition-all duration-200 ease-in-out hover:bg-gradient-to-r hover:from-red-500 hover:to-pink-500 hover:text-white hover:shadow-lg focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-red-400 animate-fade-in-right"
      >
        <!-- User Plus Icon -->
        <svg
          class="w-5 h-5 mr-2 -ml-1"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <circle cx="11" cy="11" r="8" />
          <path d="M19 21l-4-4" />
          <path d="M16 3v4M14 5h4" />
        </svg>
        <span class="whitespace-nowrap">SignUp</span>
      </a>
    </div>

    <% } else { %>
    <div class="ml-4 flex-shrink-0">
      <form action="/logout" method="POST">
        <button
          type="submit"
          class="relative px-6 py-2 bg-white text-red-500 font-bold rounded-lg shadow transition-all duration-300 hover:bg-red-500 hover:text-white hover:scale-105 focus:outline-none focus:ring-2 focus:ring-red-300 animate-fade-in-right flex items-center group"
        >
          <!-- Logout Icon -->
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path d="M9 16l-4-4m0 0l4-4m-4 4h12" />
            <path d="M16 12v8M16 4v8" />
          </svg>
          <span>Logout</span>
        </button>
      </form>
    </div>
    <% } %>
  </nav>
</header>

<style>
  @keyframes fade-in-right {
    0% {
      opacity: 0;
      transform: translateX(30px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }
  .animate-fade-in-right {
    animation: fade-in-right 0.7s cubic-bezier(0.4, 0, 0.2, 1) both;
  }
</style>
