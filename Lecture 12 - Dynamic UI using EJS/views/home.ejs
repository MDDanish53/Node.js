 <%- include('partials/head') %>
 </head>
  <body>
    <%- include('partials/header') %>
    <main
      class="flex justify-center items-center min-h-[80vh] bg-gradient-to-br from-pink-100 via-white to-red-100"
    >
      <div
        class="max-w-xl w-full bg-white/80 rounded-3xl shadow-2xl flex flex-col items-center p-8 animate-fade-in-up transition-all duration-700"
      >
        <h1
          class="font-bold font-sans text-3xl md:text-5xl text-red-600 mb-6 text-center drop-shadow-lg animate-fade-in-down"
        >
          These are the registered homes:
        </h1>
        <ul class="w-full space-y-2">
          <% registeredHomes.forEach(home => { %>
          <li
            class="mb-1 bg-white/70 border border-red-200 rounded-xl px-5 py-3 shadow-md hover:bg-red-100 transition-all duration-300 animate-slide-in-right"
          >
            <%= home.houseName %>
          </li>
          <% }) %>
        </ul>
      </div>
    </main>
    <style>
      @keyframes fade-in-down {
        0% {
          opacity: 0;
          transform: translateY(-30px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }
      @keyframes fade-in-up {
        0% {
          opacity: 0;
          transform: translateY(30px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }
      @keyframes slide-in-right {
        0% {
          opacity: 0;
          transform: translateX(40px);
        }
        100% {
          opacity: 1;
          transform: translateX(0);
        }
      }
      .animate-fade-in-down {
        animation: fade-in-down 0.7s cubic-bezier(0.4, 0, 0.2, 1) both;
      }
      .animate-fade-in-up {
        animation: fade-in-up 0.7s cubic-bezier(0.4, 0, 0.2, 1) both;
      }
      .animate-slide-in-right {
        animation: slide-in-right 0.7s cubic-bezier(0.4, 0, 0.2, 1) both;
      }
    </style>
  </body>
</html>
